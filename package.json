{
  "name": "bogdan-os",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "BogdanOS is a web-based desktop environment built with modern web technologies.",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bogdanos.git"
  },
  "keywords": [
    "web desktop",
    "os",
    "virtual desktop",
    "bogdanos",
    "webos"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "BUILD_ENV=production vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-pattern 'cypress/*'; tsc --noEmit --skipLibCheck",
    "tsc": "tsc --noEmit --skipLibCheck",
    "stylelint": "stylelint **/*.css",
    "prettier": "prettier --write .",
    "prepare": "husky",
    "test": "vitest --run",
    "test:w": "vitest --watch",
    "test:current": "vitest file-system.test.tsx",
    "test:ui": "vitest --ui"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "0.17.6",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.6.0",
    "three": "^0.169.0",
    "uuid": "^11.1.0",
    "zustand": "^4.5.6"
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@types/three": "^0.175.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.0.0-beta-e993439-20250405",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3",
    "vite": "^5.4.17",
    "vite-plugin-glsl": "^1.4.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^1.6.1"
  },
  "resolutions": {
    "typescript": "5.5.4"
  },
  "packageManager": "yarn@4.8.1"
}
